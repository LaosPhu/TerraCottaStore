@model IEnumerable<AppUserModel>
@{
    ViewData["title"] = "User Listed";
}
<h3>List User</h3>
<a asp-action="Create" asp-controller="User">Creat new user !</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">User  Name</th>
            <th scope="col">Email</th>
            <th scope="col">Pass word hass</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Role</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {

        <tr>
        <th scope="row">@user.Id</th>

        <td>@user.UserName</td>
        <td>@user.Email</td>
        <td>@user.PasswordHash</td>

       

        <td>@user.PhoneNumber</td>
                <td>@user.Role.Name</td>
        <td>
        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="User" asp-route-id="@user.Id">Edit</a>
        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="User" asp-route-id="@user.Id">Delete</a>

        

        </td>

        </tr>
        }
        

    </tbody>
</table>