@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product Listed";
}
<h3>List Produtc</h3>
<a  asp-action="Create" asp-controller="Product">Creat new product !</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Desciption</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Slug</th>
            <th scope="col">Category</th>
            <th scope="col">Brand</th>
            <th scope="col">Status</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td><img src="~/media/products/@item.image" width="120px"><br>@item.image</td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                @if (@item.status==1)
                {
                    <td>Đang bán</td>
                }
                else
                {
                    <td>Không hiển thị</td>
                }
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Product" asp-all-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Shut Down" asp-controller="Product" asp-all-route-id="@item.Id">Set off</a>
                </td>

            </tr>
        }
       
       
    </tbody>
</table>