@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product Listed";
    Paginate pager = new Paginate();
    int pageno = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageno = pager.CurrentPage;
    }
}
<h3>List Produtc</h3>
<a  asp-action="Create" asp-controller="Product">Creat new product !</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
           
            <th scope="col">Name</th>
            <th scope="col">Desciption</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Slug</th>
            <th scope="col">Category</th>
            <th scope="col">Brand</th>
            <th scope="col">Quantati</th>
            <th scope="col">Status</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            
            <tr>
                <th scope="row">@item.Id</th>
              
                <td>@item.Name</td>
                <td>@Html.Raw(item.Description)</td>
                <td>@item.Price</td>
                <td><img src="~/media/products/@item.image" width="120px"><br>@item.image</td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td>@item.Quantity</td>
                @if (@item.status == 1)
                {
                    <td style="color:darkgreen">hiển thị</td>
                }
                else
                {
                    <td style="color:crimson">Ẩn</td>
                }
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="delete" asp-controller="Product" asp-route-id="@item.Id">Delete</a>
                    
                    @if (item.status==1)
                    {
                        <a class="btn btn-danger btn-sm" asp-action="Shutdown" asp-controller="Product" asp-route-id="@item.Id">Set off</a>
                    }
                    else
                    {
                        <a class="btn btn-danger btn-sm" asp-action="Onlive" asp-controller="Product" asp-route-id="@item.Id">Set on</a>

                    }

                </td>

            </tr>
        }
       
       
    </tbody>
</table>
<partial name="_Paging" model="@pager" />