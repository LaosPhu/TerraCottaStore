@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["title"] = "Role Listed";
}
<h3>List category</h3>
<a asp-action="Create" asp-controller="Role">Creat new category !</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Role Name</th>
            <td></td>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <th scope="row">@item.Id</th>

                <td>@item.Name</td>
              


                
               <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Role" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="delete" asp-controller="Role" asp-route-id="@item.Id">Delete</a>

               </td>
                   

            </tr>
        }


    </tbody>
</table>