@model IEnumerable<CategoryModel>
@{
    ViewData["title"] = "Product Listed";
}
<h3>List Produtc</h3>
<a asp-action="Create" asp-controller="Product">Creat new product !</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Desciption</th>
   
            <th scope="col">Slug</th>
       
            <th scope="col">Status</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <th scope="row">@item.Id</th>
               
                <td>@item.Name</td>
                <td>@Html.Raw(item.Description)</td>
            
              
                <td>@item.Slug</td>
             
                @if (@item.status == 1)
                {
                    <td>Đang bán</td>
                }
                else
                {
                    <td>Không hiển thị</td>
                }
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="delete" asp-controller="Category" asp-route-id="@item.Id">Delete</a>

                    @if (item.status == 1)
                    {
                        <a class="btn btn-danger btn-sm" asp-action="Shutdown" asp-controller="Category" asp-route-id="@item.Id">Set off</a>
                    }
                    else
                    {
                        <a class="btn btn-danger btn-sm" asp-action="Onlive" asp-controller="Category" asp-route-id="@item.Id">Set on</a>

                    }

                </td>

            </tr>
        }


    </tbody>
</table>